[flake8]
max-line-length = 100

# Ignore: E203 (whitespace before ':'), E501 (line too long), W503 (line break before binary operator)
ignore = E203,E501,W503

exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache

per-file-ignores =
    __init__.py:F401
